# Supported in driver, but not in EZ4Axis

## Input invert 0 [INVERT_INPUT0]
record(bo, "$(Sys)$(Dev)InvertInput0-SP") {
    field(DESC, "Input invert 0")
    field(DTYP, "asynInt32")
    field(OUT,  "@asyn($(PORT),$(ADDR),$(TIMEOUT=1.0))ALM_INVERT_INPUT0")
    field(ZNAM, "Off")
    field(ONAM, "On")

    info(autosaveFields_pass0, "VAL")
}

