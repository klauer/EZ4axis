# Thresholds are per-axis..
## Voltage input threshold [INPUT_THRESHOLD0]
record(bo, "$(Sys)$(Dev)ReadThresh-Cmd") {
    field(DTYP, "asynInt32")
    field(OUT,  "@asyn($(PORT),$(ADDR),$(TIMEOUT=1.0))ALM_READ_THRESH")
    field(SCAN, "Passive")
    field(PINI, "YES")
}

record(ai, "$(Sys)$(Dev)InputThresh0-I") {
    field(DESC, "Voltage input threshold")
    field(DTYP, "asynFloat64")
    field(INP,  "@asyn($(PORT),$(ADDR),$(TIMEOUT=1.0))ALM_INPUT_THRESHOLD0")
    field(EGU,  "V")
    field(PREC, 5)
    field(SCAN, "I/O Intr")
}

record(ao, "$(Sys)$(Dev)InputThresh0-SP") {
    field(DESC, "Voltage input threshold")
    field(DTYP, "asynFloat64")
    field(OUT,  "@asyn($(PORT),$(ADDR),$(TIMEOUT=1.0))ALM_INPUT_THRESHOLD0")
    field(EGU,  "V")
    field(PREC, 5)
    field(FLNK, "$(Sys)$(Dev)ReadThresh-Cmd")
    field(VAL,  6144)

    info(autosaveFields_pass0, "VAL")
}

